#============== 커피 자판기 만들기 =================================
coffee = 10

print("커피 자판기를 작동 시킵니다.")
 
while True :
    money=int(input("돈을 넣어 주세요 :")) # 동전 넣기
    number=int(input("몇 잔을 드시고 싶어?\n"))
    
    money=money-300*number
    

     
    if money>=300 and number>=1:
        
        coffee = coffee - number
        print("커피가 나왔습니다.")
        print("남은 커피는 %d잔 입니다." % coffee)
        print("거스름돈은 %d원 입니다." % money)
        
        break
    
    if money < 300 or money < number*300:
        print("수량을 잘 못 입력 하셨습니다.")
             
        
  
        
        


