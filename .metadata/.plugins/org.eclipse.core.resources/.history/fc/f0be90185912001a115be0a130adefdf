#========================형식 지정===============================
# a='Hello, {0} {2} {1}'.format('Python', 'Script'. 3.6)
# print(a)
# a='Hello, {0} {2} {1} {2} {1}'.format('Python', 'Script'. 3.6)

#========================숫자 대입===============================
x=2020
y=62.5
print('%03d' % 1)
print('{0:03d}'.format(35))
print('{0:03d}'.format(x))
#print('{0:03d}'.format(y)) #실수 형만 가능
print('%08.2f' % 3.6) #실수 대입
print('{0:07.2f}'.format(y))
print()
#===================== 원하는 글자 넣기==========================
print('{0:x>10}'.format(x))
print(format(123456789,',')) # 단위마다 쉼표 넣기
print('%20s' % format(123456789, ',')) # 공란과 쉽표넣기
print('{0:x>20}'.format(x, ','))
print('{0:x>20,}'.format(x))
print()
#===================Ex 01 ========================================
a = 'Python'
print(a)
print(a.upper())
b = a.replace('on','ON')
print(b)
c = a.rjust(10)
print(c)