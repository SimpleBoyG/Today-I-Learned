#================== 배열 직접 입력 =========================
a = [[10,20],[30,40]]
b = a
b[0][0] = 600
print(b)

#================== 배열 복사 ==============================
b = a.copy()
print(b)

import copy
b = copy.deepcopy(a)
b[1][0] = 345
print(b)
print(a)

#================== 배열 모양으로 출력 ====================
i = 0
while i < len(a):
    j = 0
    while j < len(a[i]):
        print(a[i][j], end=' ' )
        j += 1
    print()
    i += 1

